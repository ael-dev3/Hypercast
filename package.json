{
  "name": "hypercast",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build": "npm run build:local",
    "build:bundle": "esbuild src/main.ts --bundle --platform=browser --outfile=public/bundle.js --format=esm",
    "dev": "esbuild src/main.ts --bundle --platform=browser --outfile=public/bundle.js --format=esm --watch",
    "poller": "tsx scripts/poller.ts",
    "poller:once": "tsx scripts/poller.ts --once",
    "sim": "npm test && npm run poller -- --once --max-pages=1 --timeout-ms=60000",
    "spacetimedb:generate": "spacetime generate --lang typescript --out-dir src/module_bindings --module-path spacetimedb",
    "spacetimedb:publish:local": "spacetime publish --module-path spacetimedb --server local",
    "spacetimedb:publish": "spacetime publish --module-path spacetimedb --server maincloud",
    "test": "vitest run",
    "test:watch": "vitest",
    "build:local": "npm run build:bundle",
    "check": "npm run test && npm run build:local"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "spacetimedb": "^2.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.12.0",
    "esbuild": "^0.25.0",
    "tsx": "^4.20.0",
    "typescript": "^5.7.3",
    "vitest": "^2.1.6"
  }
}
