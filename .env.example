# Hypersnap source
HYPERSNAP_HTTP_URL=http://127.0.0.1:3381
HYPERSNAP_POLL_INTERVAL_MS=1800000
HYPERSNAP_PAGE_SIZE=100
HYPERSNAP_MAX_PAGES_PER_POLL=4
HYPERSNAP_REQUEST_TIMEOUT_MS=12000
HYPERSNAP_STATE_PATH=.hypercast-state.json

# safety guardrails
HYPERSNAP_ALLOW_UNTRUSTED=false
HYPERSNAP_ALLOWED_HOSTS=localhost,127.0.0.1

# SpacetimeDB client configuration
SPACETIMEDB_URI=ws://localhost:3000
SPACETIMEDB_DB_NAME=hypercast

# Firebase (hosting)
FIREBASE_SITE=hypercast-web

# UI
HYPERCAST_UI_INITIAL_LIMIT=100
